{
  "name": "svelte-vite-ssr",
  "version": "0.0.0",
  "scripts": {
    "dev:csr": "vite",
    "dev:ssr": "VITE_SVELTE_HYDRATABLE=1 DEV=1 ts-node --compiler-options '{ \"module\": \"CommonJS\" }' src/server.ts",
    "build:csr": "vite --emptyOutDir build",
    "build:ssr": "VITE_SVELTE_HYDRATABLE=1 vite build --emptyOutDir --ssrManifest && vite build --ssr entry-server.ts && esbuild --platform=node --format=cjs --target=es2020 src/server.ts --outfile=dist/server.js && node fix-ssr-manifest.js && cp package.json dist",
    "install:ssr": "cd dist && npm install --only=prod",
    "serve:csr": "vite preview --port 3000",
    "serve:ssr": "PORT=3000 node dist/server.js"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "esbuild": "^0.8.57",
    "eslint": "^7.21.0",
    "eslint-config-enough": "^0.7.0",
    "eslint-plugin-ext": "^0.1.0",
    "eslint-plugin-svelte3": "^3.1.2",
    "postcss-load-config": "^3.0.1",
    "postcss-preset-env": "^6.7.0",
    "rollup-plugin-import-meta-url-to-module": "^0.2.8",
    "svelte-preprocess": "^4.6.9",
    "svelte-preprocess-css-hash": "^0.1.3",
    "svelte-preprocess-html-asset": "^0.1.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3",
    "vite": "^2.0.5",
    "vite-plugin-svelte-ssr-hot": "^8.0.1"
  },
  "dependencies": {
    "express": "^4.17.1",
    "svelte": "^3.35.0",
    "svelte-pilot": "^0.1.0-6",
    "teleman": "^0.6.1",
    "teleman-node": "^0.2.0"
  }
}
