{
  "name": "svelte-vite-ssr",
  "version": "0.1.0",
  "scripts": {
    "dev:csr": "vite",
    "dev:ssr": "VITE_SVELTE_HYDRATABLE=1 DEV=1 TS_NODE_COMPILER_OPTIONS='{ \"module\": \"CommonJS\" }' node --inspect -r ts-node/register src/server.ts",
    "build:csr": "vite --emptyOutDir build",
    "build:ssr": "VITE_SVELTE_HYDRATABLE=1 vite build --emptyOutDir --ssrManifest && vite build --ssr entry-server.ts && esbuild --platform=node --format=cjs --target=es2020 src/server.ts --outfile=dist/server.js && node fix-ssr-manifest.js",
    "install:ssr": "cp package.json dist && cd dist && npm install --only=prod",
    "serve:csr": "vite preview --port 3000",
    "serve:ssr": "PORT=3000 node dist/server.js"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.11",
    "@types/serialize-javascript": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "esbuild": "^0.9.2",
    "eslint": "^7.22.0",
    "eslint-config-enough": "^0.7.0",
    "eslint-plugin-ext": "^0.1.0",
    "eslint-plugin-svelte3": "^3.1.2",
    "postcss-load-config": "^3.0.1",
    "postcss-preset-env": "^6.7.0",
    "rollup-plugin-import-meta-url-to-module": "^0.2.9",
    "svelte-preprocess": "^4.6.9",
    "svelte-preprocess-css-hash": "^0.1.3",
    "svelte-preprocess-html-asset": "^0.1.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3",
    "vite": "^2.0.5",
    "vite-plugin-svelte-ssr-hot": "^8.0.1"
  },
  "dependencies": {
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "serialize-javascript": "^5.0.1",
    "svelte": "^3.35.0",
    "svelte-pilot": "^0.2.0"
  }
}
