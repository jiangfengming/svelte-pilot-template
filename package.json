{
  "name": "svelte-vite-ssr",
  "version": "0.1.2",
  "type": "module",
  "scripts": {
    "dev:csr": "vite --port 3000",
    "dev:ssr": "VITE_SVELTE_HYDRATABLE=1 PORT=3000 node ssr-dev-server",
    "build:csr": "vite build --emptyOutDir --outDir dist",
    "build:ssr": "export VITE_SVELTE_HYDRATABLE=1 && rm -rdf dist && vite build --ssrManifest --outDir dist/client && vite build --ssr src/server-render.ts --outDir dist/tmp && cp src/server.ts dist/tmp/ && rollup -c rollup.server.config.js && rm -rdf dist/tmp",
    "build:netlify": "export VITE_SVELTE_HYDRATABLE=1 && rm -rdf dist && vite build --ssrManifest --outDir dist/client && vite build --ssr src/server-render.ts --outDir dist/tmp && cp src/netlify.ts dist/tmp/server.ts && rollup -c rollup.server.config.js && rm -rdf dist/tmp",
    "serve:csr": "vite preview ./ --port 3000",
    "serve:ssr": "PORT=3000 node dist/server"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^24.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^11.0.0",
    "@sveltejs/vite-plugin-svelte": "^2.0.2",
    "@types/node": "^18.11.18",
    "@types/serve-static": "^1.15.0",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "@vitejs/plugin-legacy": "^3.0.1",
    "eslint": "^8.31.0",
    "eslint-config-unambiguous": "^0.7.1",
    "eslint-plugin-svelte3": "^4.0.0",
    "mime": "^3.0.0",
    "postcss": "^8.4.21",
    "postcss-load-config": "^4.0.1",
    "postcss-preset-env": "^7.8.3",
    "rollup": "^3.9.1",
    "rollup-plugin-import-meta-url-to-module": "^0.3.0",
    "rollup-plugin-string": "^3.0.0",
    "svelte-preprocess": "^5.0.0",
    "svelte-preprocess-css-hash": "^0.1.6",
    "svelte-preprocess-html-asset": "^0.1.6",
    "terser": "^5.16.1",
    "tslib": "^2.4.1",
    "typescript": "^4.9.4",
    "vite": "^4.0.4"
  },
  "dependencies": {
    "@netlify/functions": "^1.4.0",
    "serve-static": "^1.15.0",
    "svelte": "^3.55.1",
    "svelte-pilot": "^0.4.6"
  }
}
