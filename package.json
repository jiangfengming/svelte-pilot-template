{
  "name": "svelte-vite-ssr",
  "version": "0.1.2",
  "type": "module",
  "scripts": {
    "dev:csr": "vite --port 3000",
    "dev:ssr": "VITE_SVELTE_HYDRATABLE=1 PORT=3000 node ssr-dev-server",
    "build:csr": "vite build --emptyOutDir --outDir dist",
    "build:server": "export VITE_SVELTE_HYDRATABLE=1 && rm -rf dist && vite build --ssrManifest --outDir dist/client && vite build --ssr src/server-render.ts --outDir dist/tmp && cp -r src/adapters dist/tmp",
    "build:clean": "rm -rf dist/tmp && rm dist/client/ssr-manifest.json",
    "build:ssr": "npm run build:server && rollup -c -i dist/tmp/adapters/nodejs.ts && npm run build:clean",
    "build:netlify": "npm run build:server && rollup -c -i dist/tmp/adapters/netlify.ts && npm run build:clean",
    "build:netlify-edge": "npm run build:server && rollup -c -i dist/tmp/adapters/netlify-edge.ts && npm run build:clean",
    "serve:csr": "vite preview ./ --port 3000",
    "serve:ssr": "PORT=3000 node dist/server"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^11.0.0",
    "@sveltejs/vite-plugin-svelte": "^2.0.3",
    "@types/node": "^18.15.5",
    "@types/serve-static": "^1.15.1",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vitejs/plugin-legacy": "^4.0.2",
    "eslint": "^8.36.0",
    "eslint-config-unambiguous": "^0.7.1",
    "eslint-plugin-svelte3": "^4.0.0",
    "mime": "^3.0.0",
    "postcss": "^8.4.21",
    "postcss-load-config": "^4.0.1",
    "postcss-preset-env": "^8.0.1",
    "rollup": "^3.20.0",
    "rollup-plugin-import-meta-url-to-module": "^0.3.0",
    "rollup-plugin-string": "^3.0.0",
    "svelte-preprocess": "^5.0.3",
    "svelte-preprocess-css-hash": "^0.1.6",
    "svelte-preprocess-html-asset": "^0.1.6",
    "terser": "^5.16.6",
    "tslib": "^2.5.0",
    "typescript": "^5.0.2",
    "vite": "^4.2.1"
  },
  "dependencies": {
    "@netlify/functions": "^1.4.0",
    "serve-static": "^1.15.0",
    "svelte": "^3.57.0",
    "svelte-pilot": "^0.4.9"
  }
}
